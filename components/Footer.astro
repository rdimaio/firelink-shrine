---
import Hr from "./Hr.astro";
import { SITE } from "@config";

const currentYear = new Date().getFullYear();

export interface Props {
  title?: string;
  noMarginTop?: boolean;
}

const { noMarginTop = false, title = SITE.title } = Astro.props;
---

<footer class={`footer ${noMarginTop ? "" : "mt-auto"}`}>
  <Hr noPadding />
  <div class="footer-wrapper">
    <a href="/"><p>{title}</p></a>
    <a href={`#`}>Back to top</a>
    <div>
      <span>{currentYear}</span>
    </div>
  </div>
</footer>

<style>
  footer {
    @apply w-full;
  }
  .footer-wrapper {
    @apply flex flex-col items-center justify-between py-6 sm:flex-row sm:py-3;
  }
  .link-button {
    @apply my-1 p-2 hover:rotate-6;
  }
  .link-button svg {
    @apply scale-125;
  }
  .separator {
    @apply hidden sm:inline;
  }
</style>
